@model HospitalAppointmentProject1.Models.Appointment

@{
    ViewData["Title"] = "CreateAppointment";
}

<h1>CreateAppointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAppointment" asp-controller="Appointment">
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                <label asp-for="SelectedTimeSlot">Select a time slot:</label>
                <select asp-for="SelectedTimeSlot" asp-items="@(new SelectList(ViewBag.TimeSlots))">
                    <option value="">-- Select a time slot --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Major" class="control-label">Select a major:</label>
                <select id="majorDropdown" asp-for="Major" asp-items="@(new SelectList(ViewBag.specialties))">
                    <option value="">-- Select a major --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Select a doctor:</label>
                <select id="doctorDropdown" asp-for="DoctorId" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('majorDropdown').addEventListener('change', function () {
            var selectedMajor = this.value;
            var doctors = @Html.Raw(Json.Serialize(ViewBag.DoctorsBySpecialty));

            var doctorDropdown = document.getElementById('doctorDropdown');
            doctorDropdown.innerHTML = '';

            for (var i = 0; i < doctors[selectedMajor].length; i++) {
                var option = document.createElement('option');
                option.value = doctors[selectedMajor][i].value;
                option.text = doctors[selectedMajor][i].text;
                doctorDropdown.appendChild(option);
            }
        });
    </script>
}
