@model HospitalAppointmentProject1.Models.Appointment


@{
    ViewData["Title"] = "CreateAppointment";
}

<h1>CreateAppointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAppointment" asp-controller="Appointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="SelectedTimeSlot">Select a time slot:</label>
                <select asp-for="SelectedTimeSlot" asp-items="@(new SelectList(ViewBag.TimeSlots))">
                    <option value="">-- Select a time slot --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Major" class="control-label"></label>
                <select asp-for="Major" asp-items="@(new SelectList(ViewBag.specialties))">
                    <option value="">-- Select a major --</option>
                </select>
            </div>


            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="@(new SelectList(ViewBag.doctors))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
