@model IEnumerable<HospitalAppointmentProject1.Models.Appointment>

@{
    ViewData["Title"] = "AppointmentList";
}

<h1>My Appointments</h1>
<hr/>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                User Name
            </th>
            <th>
                Doctor Name
            </th>
            <th></th>

</thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @item.User?.FullName
            </td>
            <td>
                @item.Doctor?.FirstName  @item.Doctor?.LastName
            </td>
            <td>

                <form method="get" asp-action="Edit">
                    <input type="hidden" name="AppointmentId" value="@item.AppointmentId" />
                    <button type="submit" class="btn btn-primary" asp-action="Edit">Edit</button>
                </form>

                <form method="post" asp-action="Delete" onsubmit="return confirm('Emin misiniz?')" style="display:inline-block">
                    <input type="hidden" name="AppointmentId" value="@item.AppointmentId" />
                    <button type="submit" class="btn btn-danger" asp-action="Delete">Delete</button>
                </form>


            </td>
        </tr>
}
    </tbody>
</table>
