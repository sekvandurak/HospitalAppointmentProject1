@model HospitalAppointmentProject1.ViewModels.EditViewModel
<h1>Edit User</h1>
<hr />  
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="card">
        <div class="card-header">Parola Güncelle</div>
        <div class="card card-body">
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>
    </div>


    <div class="card">
        <div class="card-header">Roller</div>
        <div class="card card-body">
            @foreach(var role in ViewBag.Roles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="@role" name="SelectedRoles" value="@role" @(Model.SelectedRoles.Any(i=>i == role)? "checked" : "")/>
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }
        </div>

    </div>

    <button type="submit" class="btn btn-primary">Create</button>

</form>